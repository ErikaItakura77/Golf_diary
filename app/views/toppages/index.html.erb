<% if logged_in? %>
  <div class="row">
    <aside class="col-md-10">
      <%= form_for(@round) do |f| %>
       
       <form class="form-horizontal">
      	<div class="form-group">
      		<label class="col-sm-2 control-label" for="InputDay">ゴルフ場</label>
      		<div class="col-sm-10">
      			<input type="email" class="form-control" id="InputCourse" placeholder="ゴルフ場">
      		</div>
      	</div>
      	
      	<div class="form-group">
      		<label class="col-sm-2 control-label" for="InputDay">ラウンド日</label>
      		<div class="col-sm-10">
      			<input type="password" class="form-control" id="InputDay" placeholder="ラウンド日">
      		</div>
      	</div>
      	
      	<div class="form-group">
      		<label class="col-sm-2 control-label" for="InputWeather">天気</label>
      		<div class="col-sm-10">
      			<input type="email" class="form-control" id="InputWeather" placeholder="天気">
      		</div>
      	</div>
      	
      	<div class="form-group">
      		<label class="col-sm-2 control-label" for="InputWind">風</label>
      		<div class="col-sm-10">
      			<input type="password" class="form-control" id="InputWind" placeholder="風">
      		</div>
      	</div>
      	
      	<div class="form-group">
      		<label class="col-sm-2 control-label" for="InputGreen">グリーン</label>
      		<div class="col-sm-10">
      			<input type="email" class="form-control" id="InputGreen" placeholder="グリーン">
      		</div>
      	</div>
      	
      	<div class="form-group">
      		<label class="col-sm-2 control-label" for="InputTee">使用ティー</label>
      		<div class="col-sm-10">
      			<input type="password" class="form-control" id="InputTee" placeholder="使用ティー">
      		</div>
      	</div>
      	
      	<div class="form-group">
      		<label class="col-sm-2 control-label" for="InputScore_first_nine">前半スコア</label>
      		<div class="col-sm-10">
      			<input type="email" class="form-control" id="InputScore_first_nine" placeholder="前半スコア">
      		</div>
      	</div>
      	
      	<div class="form-group">
      		<label class="col-sm-2 control-label" for="InputScore_back_nine">後半スコア</label>
      		<div class="col-sm-10">
      			<input type="password" class="form-control" id="InputScore_back_nine" placeholder="後半スコア">
      		</div>
      	</div>
      	
      	<div class="form-group">
      		<label class="col-sm-2 control-label" for="InputScore_add">追加スコア</label>
      		<div class="col-sm-10">
      			<input type="email" class="form-control" id="InputScore_add" placeholder="追加スコア">
      		</div>
      	</div>
      	
      	<div class="form-group">
      		<label class="col-sm-2 control-label" for="InputMember">同伴者</label>
      		<div class="col-sm-10">
      			<input type="password" class="form-control" id="InputMember1" placeholder="同伴者1">
      			<input type="password" class="form-control" id="InputMember2" placeholder="同伴者2">
      			<input type="password" class="form-control" id="InputMember3" placeholder="同伴者3">
      			<input type="password" class="form-control" id="InputMember4" placeholder="同伴者4">
      		</div>
      	</div>
      	
      	<div class="form-group">
      		<label class="col-sm-2 control-label" for="InputPicture">画像</label>
      		<div class="col-sm-10">
      			<input type="email" class="form-control" id="InputPicture" placeholder="画像">
      		</div>
      	</div>
      	
      	<div class="form-group">
      		<label class="col-sm-2 control-label" for="InputVideo">動画</label>
      		<div class="col-sm-10">
      			<input type="password" class="form-control" id="InputVideo" placeholder="動画">
      		</div>
      	</div>
        	
        <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render 'rounds/rounds', rounds: @rounds %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Golf diary</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>