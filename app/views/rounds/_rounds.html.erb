<ul class="media-list">
  <% rounds.each do |round| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(round.user, { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to round.user.name, user_path(round.user) %>
        </div>
        <div>
          <p>日付：<%= round.day %></p>
          <p>ゴルフ場：<%= round.course %></p>
        </div>
      </div>
          <% if current_user == round.user %>
            <%= link_to "詳細ページ", round_path(round), class: 'btn btn-success btn-xs' %>
          <% end %>
    </li>
  <% end %>
  <%= paginate rounds %>
</ul>